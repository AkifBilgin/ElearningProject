@model MyElearningProject.DAL.Entities.Comment
@{
    Layout = null;
}



@Html.Action("HeadPartial", "ELearningHome")

@Html.Action("SpinnerPartial", "ELearningHome")

@Html.Action("NavbarPartial", "ELearningHome")




<div class="container-xxl py-5">
    <h6 class="section-title bg-white text-center text-primary px-3">Bewertung abgeben</h6>


    <form method="post" action="/Profile/Comments">

        @Html.DropDownListFor(x => x.CourseID, (List<SelectListItem>)ViewBag.course, new { @class = "form-control", @style = "background-color:#F1DCD4; font-weight:bold" })
        <br /><br />

        @Html.TextAreaFor(x => x.CommentText, new { @rows = "4", @cols = "50" })

        <button id="submitComment" class="btn btn-outline-primary" type="submit">Kommentar abgeben</button>
    </form>


</div>
