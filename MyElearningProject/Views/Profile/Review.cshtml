@model MyElearningProject.DAL.Entities.Review
@{
    Layout = null;
}



@Html.Action("HeadPartial", "ELearningHome")

@Html.Action("SpinnerPartial", "ELearningHome")

@Html.Action("NavbarPartial", "ELearningHome")




<div class="container-xxl py-5">
    <h6 class="section-title bg-white text-center text-primary px-3">Bewertung abgeben</h6>


    <form method="post" action="/Profile/Review">

        @Html.DropDownListFor(x => x.CourseID, (List<SelectListItem>)ViewBag.course, new { @class = "form-control", @style = "background-color:#F1DCD4; font-weight:bold" })
        <br /><br />

        <div class="rate">
            <input type="radio" id="star5" name="ReviewScore" value="5" />
            <label for="star5" title="text">5 stars</label>

            <input type="radio" id="star4" name="ReviewScore" value="4" />
            <label for="star4" title="text">4 stars</label>

            <input type="radio" id="star3" name="ReviewScore" value="3" />
            <label for="star3" title="text">3 stars</label>

            <input type="radio" id="star2" name="ReviewScore" value="2" />
            <label for="star2" title="text">2 stars</label>

            <input type="radio" id="star1" name="ReviewScore" value="1" />
            <label for="star1" title="text">1 star</label>
        </div>
        <button id="submitReview" class="btn btn-outline-primary" type="submit">Bewertung abgeben</button>
    </form>


</div>
