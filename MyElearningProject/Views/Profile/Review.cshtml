<script>
    const newsletter = document.querySelector('#news');
    newsletter.addEventListener('click', function () {
        Swal.fire({
            title: 'Newsletter-Anmeldung',
            text: 'Sie wurden erfolgreich für den Newsletter angemeldet.',
            icon: 'success',
            confirmButtonText: 'Schließen!',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            background: '#f7f7f7',
        });
    })

</script>

<script>
    const review = document.querySelector('#submitReview');
    review.addEventListener('click', function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Bewertung abgegeben',
            text: 'Ihre Bewertung wurde erfolgreich abgegeben',
            icon: 'success',
            confirmButtonText: 'Schließen!',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            background: '#f7f7f7',
        }).then(function () {
            e.target.closest('form').submit();
        });
    })

</script>
