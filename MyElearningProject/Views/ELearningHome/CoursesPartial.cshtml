@model List<MyElearningProject.DAL.Entities.Course>
@{
    Layout = null;
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Kurse</h6>
            <h1 class="mb-5">Zuletzt hinzugefügt</h1>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
            
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <a href="/AllCourses/CourseDetails/@item.CourseID">
                                <img class="img-fluid" src="@item.ImageUrl" alt="" style="width:370px; height:200px;">
                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                </div>
                            </a>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h3 class="mb-0">@item.Price €</h3>
                            <h5 class="mb-4">@item.Title</h5>
                            
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Instructor.Name @item.Instructor.Surname</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Duration Stunden</small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-shopping-basket text-primary me-2"></i>@item.Category.CategoryName</small>
                        </div>
                    </div>
                </div>
           
            }


        </div>
    </div>
</div>