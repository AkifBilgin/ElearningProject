@model MyElearningProject.DAL.Entities.Course
@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kurs Update</h2>

<form method="post">
    @Html.HiddenFor(x=>x.CourseID)
    <label>Kurs Bezeichnung</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br /><br />
    <label>Preis</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br /><br />
    <label>Dauer</label>
    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
    <br /><br />
    <label>Foto</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <label>Kategorie</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
    <br /><br />
    <label>Dozent</label>
    @Html.DropDownListFor(x => x.InstructorID, (List<SelectListItem>)ViewBag.instructor, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-primary">Speichern</button>
</form>