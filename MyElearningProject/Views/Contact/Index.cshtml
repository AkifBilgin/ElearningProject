@model MyElearningProject.DAL.Entities.Message
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("HeadPartial", "ELearningHome")

<body>
    @Html.Action("SpinnerPartial", "ELearningHome")

    @Html.Action("NavbarPartial", "ELearningHome")
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Kontakt</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">KONTAKTIEREN SIE UNS</h6>
                <h1 class="mb-5">Kontaktieren Sie uns bei Fragen</h1>
            </div>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <h5>Nehmen Sie Kontakt auf</h5>
                    <p class="mb-4">Sie haben Fragen, benötigen weitere Informationen oder möchten uns Feedback geben? Wir sind hier, um Ihnen zu helfen und Ihre Anliegen zu klären. Bitte zögern Sie nicht, uns zu kontaktieren – unser Team freut sich darauf, von Ihnen zu hören und steht Ihnen stets zur Verfügung!"</p>
                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-map-marker-alt text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Office</h5>
                            <p class="mb-0">LimbeckerPlatz 1, Essen, Deutschland</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-phone-alt text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Telefon</h5>
                            <p class="mb-0">020180085784</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-envelope-open text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Email</h5>
                            <p class="mb-0">info@eLerning.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <iframe class="position-relative rounded w-100 h-100"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9749.244872839526!2d7.013561!3d51.4582239!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b8c97c6b17c2ab%3A0x421b2b5ecb67b0!2sLimbecker%20Platz%2C%20Limbecker%20Platz%201%2C%2045145%20Essen%2C%20Germany!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                            frameborder="0" style="min-height: 300px; border:0;" allowfullscreen="" aria-hidden="false"
                            tabindex="0"></iframe>
                </div>

                <div class="col-lg-4 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Name" name="Name">
                                    <label for="name">Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Email" name="Email">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Betreff" name="Subject">
                                    <label for="subject">Betreff</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Nachricht" id="message" name="MessageContent" style="height: 150px"></textarea>
                                    <label for="message">Nachricht</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button id="senden" class="btn btn-primary w-100 py-3" type="submit">Senden</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Footer Start -->
    @Html.Action("FooterPartial", "ELearningHome")
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/elearning/lib/wow/wow.min.js"></script>
    <script src="~/Templates/elearning/lib/easing/easing.min.js"></script>
    <script src="~/Templates/elearning/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/elearning/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const newsletter = document.querySelector('#news');
        newsletter.addEventListener('click', function () {
            Swal.fire({
                title: 'Newsletter-Anmeldung',
                text: 'Sie wurden erfolgreich für den Newsletter angemeldet.',
                icon: 'success',
                confirmButtonText: 'Schließen!',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                background: '#f7f7f7',
            });
        })

    </script>
    <script>
        const nachricht = document.querySelector('#senden');
        nachricht.addEventListener('click', function (e) {
            e.preventDefault()
            Swal.fire({
                title: 'Nachricht gesendet',
                text: 'Ihr Nachrict wurde erfolgreich gesendet',
                icon: 'success',
                confirmButtonText: 'Schließen!',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                background: '#f7f7f7',
            }).then(function () {
                e.target.closest('form').submit();
            });
        })

    </script>
    <!-- Template Javascript -->
    <script src="~/Templates/elearning/js/main.js"></script>
</body>

</html>