@model MyElearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Dozent Update</h3>
<form method="post">
    <br />
    @Html.HiddenFor(x => x.InstructorID)
    <br />
    <label>Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Nachname</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br />
    <label>Foto</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control"})
    <br /><br />
    <button class="btn btn-primary">Update</button>
</form>
